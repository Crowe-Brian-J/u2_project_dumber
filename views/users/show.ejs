<%- include('../partials/header.ejs') %>
  <% if(posts) { %>
    <div id="avatar-reply" class="center white-text">
      <img src="<%= user.avatar %>" alt="user-avatar">&nbsp;
      <%= user.name %>
    </div>
    <% posts.reverse() %>
      <%posts.forEach((p)=> { %>
        <% if (user._id.toString()===(p.user.toString())) { %>
          <div class="col s12 m7">
            <div class="card horizontal">
              <div class="card-stacked">
                <div class="card-content">
                  <p class="black-text text-lighten-1">
                    <%= p.postText %>
                  </p>
                </div>
                <div class="card-action">
                  <a class="blue-text text-lighten-1" href="/posts/<%= p._id%>">reply?</a>
                </div>
              </div>
            </div>
          </div>
          <% } %>
            <% }) %>
              <% } %>
                <%- include('../partials/footer.ejs') %>