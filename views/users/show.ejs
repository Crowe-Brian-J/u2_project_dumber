<%- include('../partials/header.ejs') %>
  <% if(posts) { %>
    <div id="avatar-reply" class="center white-text">
      <img src="<%= userOne.avatar %>" alt="user-avatar">&nbsp;
      <%= user.name %>
    </div>
    <% posts.reverse() %>
      <%posts.forEach((p)=> { %>
        <% if (userOne._id.toString()===(p.user.toString())) { %>
          <div class="col s12 m7">
            <div class="card horizontal">
              <div class="card-stacked">
                <div class="card-content">
                  <p class="black-text text-lighten-1">
                    <%= p.postText %>
                  </p>
                </div>
                <div class="card-action">
                  <div>
                    <a class="blue-text text-lighten-1" href="/posts/<%= p._id%>">reply?&nbsp;&nbsp;
                      <% if(p.replies.length> 0) { %>
                        |&nbsp;&nbsp;view
                        replies
                        <% } %>
                    </a>
                  </div>
                  <div>
                    <% if (user?._id.toString()===(p.user.toString())) { %>
                      <form action="/posts/<%= p._id %>?_method=DELETE" class="delete-post" method="POST">
                        <button type="submit">DELETE</button>
                      </form>
                      <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% } %>
            <% }) %>
              <% } %>
                <%- include('../partials/footer.ejs') %>