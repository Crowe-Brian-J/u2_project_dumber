            <article id="postId">
              <a href="/posts/<%= p._id %>">
                <%= p.postText %>
              </a>
              <br>
              <div id="avatar">
                <img alt="avatar" src="<%=p.userAvatar %>" referrerpolicy="no-referrer">&nbsp;
              </div>
            </article>
            <article id="postNav">
              <div id="reply-link">
                <a href="/posts/<%= p._id %>">
                  <% if(p.replies.length> 0) { %>
                    <div>View Replies</div>
                    <% } %>
                      <div>Reply?</div>
                </a>
              </div> -->

          </article>
          </div>
          <% })} %>
  </main>

